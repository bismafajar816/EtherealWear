<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-auto">
            <img src="/img/main.jpeg" alt="">
        </div>
    </div>
    
</section>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All Collection</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <% pizzas.forEach(function(pizza) { %>
        <div class="w-full border border-gray-200 p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 ease-in-out">
            <!-- Image Section -->
            <div class="relative h-68 w-full overflow-hidden mb-4">
                <img class="h-full w-full object-cover transform hover:scale-105 transition-transform duration-300" src="/img/<%= pizza.image %>" alt="">
            </div>
            <!-- Product Info -->
            <div class="text-center">
                <h2 class="mb-2 text-xl font-semibold text-gray-800"><%= pizza.name %></h2>
                <span class="size py-1 px-4 bg-gray-100 rounded-full uppercase text-sm text-gray-600"><%= pizza.size %></span>
                <div class="flex flex-col items-center mt-4">
                    <span class="font-bold text-xl text-gray-900">â‚¹<%= pizza.price %></span>
                    <button data-pizza="<%= JSON.stringify(pizza) %>"
                        class="add-to-cart mt-2 py-2 px-6 bg-orange-500 text-white <rounded-md></rounded-md> hover:bg-orange-600 transition-colors duration-300 hover:text-white border-none">
                        Add to Cart
                    </button>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    
    
    
    
    
    
    
    
    
    
    
</section>